@require 'fonts';
@require 'reset';
@require 'lib';

@import 'quiz';

// Global styling and layout

//*----------------------------------------------------------------*/
// @General elements
html {
    background: #fff;
    font-size: $base-font-size;
    line-height: 1.5;
    height: 100%;
    -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
    text-rendering: optimizeLegibility;
}

body {
    font-family: 'Fira Sans', Calibri, sans-serif;
    color: $primary-text-color;
    background: #fff;
    height: 100%;
}

ul,
ol {
    margin-left: 40px;
}



//*----------------------------------------------------------------*/
// @Headings
h1, h2, h3, h4, h5, h6, legend, dl.faq dt {
    color: $secondary-text-color;
    font-weight: 400;
    font-family: 'Fira Sans Light', Calibri, sans-serif;
    letter-spacing: -.025em;
    line-height: 1.1;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, .35);
    margin: 0 0 .5em;
}

h1,
.page-title,
.section-title {
    font-size: 36px;
}

h2 {
    font-size: 28px;
}

h3 {
    font-size: 20px;
}

h4,
legend,
dl.faq dt {
    font-size: 18px;
    letter-spacing: normal;
}

h5 {
    font-size: 16px;
    letter-spacing: normal;
}

h6 {
    font-size: 14px;
    letter-spacing: normal;
}



//*----------------------------------------------------------------*/
// @Links
a:link {
    color: $link-color;
    text-decoration: underline;
}

a:visited {
    color: desaturate($link-color, 30%);
}

a:hover,
a:focus,
a:active {
    color: darken($link-color, 30%);
}

.go:after {
    content: " Â»";
    white-space: nowrap;
}


//*----------------------------------------------------------------*/
// @Forms
input,
textarea,
select {
    font-family: inherit;
    font-size: 100%;
    color: $primary-text-color;
}

input,
textarea {
    background: #fff;
    padding: 3px 6px;
    border: 1px solid darken($light-blue, 20%);
    border-radius: 6px;

    &:hover,
    &:focus {
        border-color: darken($light-blue, 30%);
    }
}

label {
    display: block;
    font-size: 14px;
    margin: 0 0 .25em;

    &.check {
        display: inline;
        margin: 0;
        text-transform: none;

        input {
            width: auto;
            background: transparent;
            border: 0;
            padding: 0;
        }
    }
}

:disabled,
.disabled {
    opacity: .5;
}


//*----------------------------------------------------------------*/
// @Buttons
// Standard blue buttons
.button,
.button:link,
.button:visited {
    {button}
    background-color: $medium-blue;
    color: #fff;
}

.button:hover,
.button:focus,
.button:active {
    background-color: lighten($medium-blue, 10%);
}

.button:focus {
  outline-color: $primary-text-color;
}

.button-hollow,
.button-hollow:link,
.button-hollow:visited {
    {button}
    background-color: lighten($light-gray, 20%);
    border: 2px solid $dark-gray;
    color: $link-color;

    &:hover,
    &:focus,
    &:active {
        background-color: $medium-blue;
        border-color: $medium-blue;
        color: #fff;
    }
}



//*----------------------------------------------------------------*/
// @Layout containers
#outer-wrapper {
    background: $light-gray;
    border-top: 2px solid #fff;
    position: relative;
}

.section {
    border-bottom: 1px solid rgba(0, 0, 0, .05);
    padding: 24px 0;
    clearfix();
}

.section:last-child {
    border-bottom: 0;
}

.contain {
    margin: 0 auto;
    min-width: 280px;
    padding: 0 20px;
    position: relative;
    clearfix();
}

.media {
    clearfix();
    margin-bottom: 1.5em;
}

.media-image img {
    margin-bottom: 1.5em;
    padding: 5px;
    background: #fff;
    box-shadow: 0 1px 1px rgba(0, 0, 0, .1);
}

.video-frame iframe {
    width: 280px;
    height: 158px;
    margin-bottom: 1.5em;
}


//*----------------------------------------------------------------*/
// @Header
.masthead {
    {section-blue}
    {light-links}

    .contain {
        padding: 60px 20px 20px;
    }
}

#tabzilla {
    background: url('/static/img/tab.png') no-repeat;
    display: block;
    height: 44px;
    width: 150px;
    overflow: hidden;
    position: absolute;
    right: 15px;
    top: 0;
    text-indent: 150%;
}

.site-switcher {
    font-size: 14px;
    padding: 10px;
    background: rgba(0, 0, 0, .05);
    border-radius: 6px;
    box-shadow: inset 0 0 3px rgba(0, 0, 0, .1);

    p {
        margin: 0 0 .5em;
    }

    label {
        display: inline;
        margin-right: 10px;
    }

    button {
        a11y-hidden();
    }

    a {
        font-size: 12px;
        display: block;
        color: $yellow;

        &:hover,
        &:focus {
            color: #fff;
        }
    }
}

.global-message {
    background: #fff;
    padding: 10px 20px;
    border-radius: 6px;
    border: 3px solid $light-blue;
    clear: both;
    margin: 1em 0;
    box-shadow: 0 1px 1px rgba(0, 0, 0, .1);
    color: $primary-text-color;

    p {
        margin: 0;
    }
}

.site-logo a {
    display: block;
    width: 225px;
    height: 70px;
    text-indent: 110%;
    white-space: nowrap;
    overflow: hidden;
    text-decoration: none;
    background: url('/static/img/fxos-logo.png') no-repeat;

    @media $media-query-highres {
        background-image: url('/static/img/fxos-logo-hr.png');
        background-size: 225px 70px;
    }
}

.nav-info {
    text-transform: uppercase;
    font-size: 14px;

    ul {
        list-style: none;
        margin: 1.5em 0 0;

        li {
            display: inline;
            margin: 0 10px .25em 0;
        }
    }

    a {
        text-decoration: none;
    }
}

#loggedin {
    background-color: #cc0000;
    text-align: center;
    padding: 5px;
    color: white;
}

//*----------------------------------------------------------------*/
// @Navigation

.nav-main {
    position: relative;
    margin-bottom: 1.5em;

    .menu-icon {
        display: block;
        min-height: 34px;
        padding-left: 40px;
        background: url('/static/img/menu-icon.svg') 0 -2px no-repeat;
        text-decoration: none;
        margin-bottom: -2px;
    }

    ul {
        border-top: 1px dotted $dark-gray;
        list-style: none;
        margin: 0;
        max-height: 0;
        overflow: hidden;
        transition: max-height 1s ease-in-out;
    }

    .menu-icon:hover + ul,
    .menu-icon:focus + ul,
    .menu-icon:active + ul,
    ul:hover,
    ul:focus {
        max-height: 600px;
    }

    li {
        border-bottom: 1px dotted $dark-gray;

        a {
            display: block;
            padding: .5em 10px;
            text-decoration: none;
            transition: background-color .1s ease;

            &:hover,
            &:focus {
                background-color: lighten($light-gray, 20%);
            }
        }
    }
}


//*----------------------------------------------------------------*/
// @Footer
.footer {
    background: #fff;
    font-size: 12px;
    padding: 48px 0;

    ul {
        list-style: none;
        margin-left: 0;
    }
}


//*----------------------------------------------------------------*/
// @Mobile @Landscape layout: 480px

@media $media-query-mobile-wide {

    .video-frame iframe {
        width: 440px;
        height: 248px;
    }

}



//*----------------------------------------------------------------*/
// @Tablet layout: 760px

@media $media-query-tablet {

    h1,
    .section-title,
    .page-title {
        font-size: 48px;
    }

    h2  {
        font-size: 32px;
    }

    h3 {
        font-size: 28px;
    }

    h4,
    legend,
    dl.faq dt {
        font-size: 24px;
    }

    .contain {
        width: $width-tablet - ($grid-gutter-width * 2);
    }

    .main {
        span_narrow(8);
        offset_narrow(1);
    }

    .aside {
        span_narrow(3);
    }

    .site-logo {
        width: 225px;
        float: left;
    }

    .site-switcher {
        background: transparent;
        box-shadow: none;
        padding: 0;
        width: 300px;
        float: right;
        text-align: right;
    }

    .nav-info {
        position: absolute;
        top: 10px;
        right: 170px;
        font-size: 16px;

        ul {
            margin: 0;
        }
    }

    .nav-main {
        .menu-icon {
            display: none;
        }

        ul {
            height: auto;
            overflow: visible;
            max-height: auto;
            transition: none;
        }
    }

    .video-frame iframe {
        width: 460px;
        height: 259px;
    }

    .media-image {
        padding-left: ($grid-narrow-column-width * 3) + ($grid-gutter-width * 3);

        img {
            float: left;
            margin-left: -(($grid-narrow-column-width * 3) + ($grid-gutter-width * 3) + 5);
            width: ($grid-narrow-column-width * 3) + ($grid-gutter-width * 2);
        }
    }

    [dir='rtl'] {
        .media-image {
            padding-left: 0;
            padding-right: ($grid-narrow-column-width * 3) + ($grid-gutter-width * 3);

            img {
                float: right;
                margin-left: 0;
                margin-right: -(($grid-narrow-column-width * 3) + ($grid-gutter-width * 3) + 5);
            }
        }
    }

    .footer-license,
    .footer-lang {
        span_narrow(3);
    }

    .footer-logo,
    .footer-nav {
        span_narrow(2);
    }

    .footer-license {
        margin-right: $grid-narrow-column-width + $grid-gutter-width;
    }

}



//*----------------------------------------------------------------*/
// @Desktop layout: 1000px

@media $media-query-desktop {

    .contain {
        width: $width-desktop - ($grid-gutter-width * 2);
    }

    .main {
        span(8);
        offset(1);
    }

    .aside {
        span(3);
    }

    .site-logo {
        span(8);
    }

    .site-switcher {
        span(3);
        offset(1);
    }

    .video-frame iframe {
        width: 620px;
        height: 349px;
    }

    .media-image {
        padding-left: ($grid-column-width * 3) + ($grid-gutter-width * 3);

        img {
            margin-left: -(($grid-column-width * 3) + ($grid-gutter-width * 3) + 5);
            width: ($grid-column-width * 3) + ($grid-gutter-width * 2);
        }
    }

    [dir='rtl'] {
        .media-image {
            padding-left: 0;
            padding-right: ($grid-column-width * 3) + ($grid-gutter-width * 3);

            img {
                float: right;
                margin-left: 0;
                margin-right: -(($grid-column-width * 3) + ($grid-gutter-width * 3) + 5);
            }
        }
    }

    .footer-license,
    .footer-lang {
        span(3);
    }

    .footer-logo,
    .footer-nav {
        span(2);
    }

    .footer-license {
        margin-right: $grid-column-width + $grid-gutter-width;
    }

}



//*----------------------------------------------------------------*/
// More height for tall viewports

@media screen and (min-height: 600px) {

    .section {
        padding: 48px 0;
    }

}
